extends layout

!= messages()
block content
 h2.page-header Register
 p Please register using the form below
  if errors
   each error, i in errors
    div.alert.alert-danger #{error.msg}
 form(method='post', action='/users/register', enctype='multipart/form-data' autocomplete='on')
  .form-group
   label Name
   input.form-control(name='name', type='text', placeholder='Enter name' autocomplete='on')
  .form-group
   label Email
   input.form-control(name='email', type='email', placeholder='Enter email' autocomplete='on')
  .form-group
   label Username
   input.form-control(name='username', type='text', placeholder='Enter Username' autocomplete='on')
  .form-group
   label Password
   input.form-control(name='password', type='password', placeholder='Enter Password' autocomplete='on')
  .form-group
   label Confirm Password
   input.form-control(name='password2', type='password', placeholder='Confirm Password' autocomplete='on')
  .form-group
   label Profile Image
   input.form-control(name='profileimage', type='file')
  input.btn.btn-primary(type='submit', name='submit', value='Register')